<view class="container">
    <van-field custom-style="{{style}}" model:value="{{ name }}" placeholder="请输入用户名" />
    <van-field custom-style="{{style}}" model:value="{{ password }}" type="password" placeholder="请输入密码" border="{{ false }}" />
    <view class="login-container">
        <van-button custom-class="main-button" type="primary" bindtap="loginByName">登录</van-button>
    </view>
    <van-toast id="van-toast" />
</view>